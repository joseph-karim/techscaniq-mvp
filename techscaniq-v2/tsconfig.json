{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "allowJs": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "start-api.ts"],
  "exclude": [
    "node_modules", 
    "dist",
    "src/orchestrator/evidence-extractor.ts",
    "src/orchestrator/langgraph-integrated.ts", 
    "src/orchestrator/unified-research-orchestrator.ts",
    "src/orchestrator/nodes/generateReport.ts",
    "src/orchestrator/pipeline-monitor.ts",
    "src/services/queue/workers/skyvernWorker.ts",
    "src/test-langgraph-with-timeout.ts",
    "src/tools/advancedTechnicalAnalyzer.ts",
    "src/tools/claudeOrchestrationClient.ts",
    "src/tools/deepResearchClient.ts",
    "src/tools/directCrawl4AI.ts",
    "src/tools/directSecurityScanner.ts",
    "src/tools/documentAnalyzer.ts",
    "src/tools/error-handling.ts",
    "src/tools/evidenceClients.ts",
    "src/tools/operatorNavigator.ts",
    "src/tools/webSearch.ts"
  ]
}